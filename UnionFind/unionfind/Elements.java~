class Elements {

    private int[] elements;
    Elements(int size) {
	this.elements = new int[2*size];
	for(int i=0;i<elements.size;i+=2) {
	    elements[i]=i/2;
	    elements[i+1]=0;
	    
	}
    }

    int getParent(int i) {
	return elements[2*i];
    }

    int getSize(int i) {
      	return elements[2*i+1];
    }

    

}
